<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

	<!-- Fontawesome link -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
	<!-- CSS  -->
	<link rel="stylesheet" type="text/css" href="/css/styles.css" />
	<link href="https://fonts.googleapis.com/css?family=Raleway:400,900" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">

	<title>{{title}}</title>
</head>

<body class="hero">
	<div class="wrapper">
		<div class="container">
		<nav class="navbar navbar-expand-md navbar-dark bg-dark">
			<a class="navbar-brand" href="/">
				<div class="logo">
					<i class="fas fa-grin-tongue-wink"></i>
				</span>wi-Party | ATL </span>
				</div>
			</a>
			<button class="navbar-toggler .navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="true" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse justify-content-end" id="navbarsExampleDefault">
				<ul class="navbar-nav align-items-end">
					<li>
						<div id="current-username"></div>
					</li>
					&nbsp;
					<li class="nav-item active" id="host-link">
						<button type="button" id="host-button-enable" class="btn-two red small" data-toggle="modal" data-target="#exampleModal">Host</button>
					</li>
					&nbsp;
					<li class="nav-item active" id="logout-link">
						<button id="logout-btn" type="button" class="btn-two cyan small">Sign Out</button>
					</li>
					&nbsp;
					<li class="nav-item active" id="login-link">
					<button type="button" class="btn-two red small" data-toggle="modal" data-target="#signInModal">Sign In</button>
					</li>
					&nbsp;
					<li class="nav-item active" id="register-link">
						<button type="button" class="btn-two cyan small" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
					</li>
				</ul>
			</div>
		</nav>
	</div>
		{{{ body }}}
		<div class="container footer">
		</div>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Create Your Party</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<form class="party-create" id="new-record-form">
						<input type="text" class="form-control" name="event_name" value="" id="event-name" placeholder="event name">
                        <textarea  rows="5" class="form-control" name="event_name" value="" id="event-description" placeholder="event description"></textarea>
						<input type="text" class="form-control" name="event_address" id="event-address" placeholder="event address">
						<input type="text" class="form-control" name="event_date" value="" id="event-date" placeholder="event date">
						<input type="text" class="form-control" name="event_time" value="" id="event-time" placeholder="event time">
						<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal 2 -->
	<div class="modal fade" id="signInModal">
		<div class="modal-dialog modal-sm">
			<div class="modal-content text-center">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Login to wi-Party</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<!-- Modal body -->
				<div class="modal-body">
					<form class="user-login">
						<div class="login-err-msg"></div>
						<br />
						<input type="email" class="email" placeholder="email" required>
						<input type="text" class="password" placeholder="password" required> <br />
						<button type="submit" class="btn btn-primary mt-2">Login</button>
					</form>
				</div>
			</div>
		</div>
	</div>


	<!-- Modal 3 -->
	<div class="modal fade" id="signUpModal">
		<div class="modal-dialog modal-sm">
			<div class="modal-content text-center">
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">SignUp on wi-Party</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<!-- Modal body -->
				<div class="modal-body">
					<form class="user-create">
						<div class="register-err-msg"></div>
						<br />
						<input type="text" class="name" placeholder="name">
						<input type="text" class="email" placeholder="email">
						<input type="text" class="password" placeholder="password"> <br />
						<!-- end edit -->
						<button type="submit" class="btn btn-primary mt-2">Register</button>
					</form>
				</div>
			</div>
		</div>
	</div>


	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
	<script src="https://www.gstatic.com/firebasejs/5.5.2/firebase.js"></script>
	<script src="/js/main.js"></script>
	<script>
		$('#host-link').toggle(!!localStorage.getItem('uid'))
		$('#login-link').toggle(!localStorage.getItem('uid'));
		$('#register-link').toggle(!localStorage.getItem('uid'));
		$('#logout-link').toggle(!!localStorage.getItem('uid'));
	</script>
</body>

</html>
